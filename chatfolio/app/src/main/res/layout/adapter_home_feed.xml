<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">
    <android.support.v7.widget.CardView

        app:cardCornerRadius="@dimen/cardview_default_radius"
        app:cardUseCompatPadding="true"
        app:elevation="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="5dp"
                android:layout_alignParentTop="true"
                android:id="@+id/feedImage"
                android:background="#ffe"
                android:layout_width="match_parent"
                android:layout_height="120dp" />
            <LinearLayout
                android:layout_margin="5dp"
                android:layout_alignParentTop="true"
                android:orientation="horizontal"
                android:layout_width="130dp"
                android:padding="2dp"
                android:layout_height="50dp">
                <ImageView
                    android:layout_margin="2dp"
                    android:id="@+id/feedSubImage1"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <ImageView
                    android:layout_margin="2dp"
                    android:id="@+id/feedSubImage2"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <ImageView
                    android:layout_margin="2dp"
                    android:id="@+id/feedSubImage3"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
            </LinearLayout>
            <TextView
                android:layout_margin="5dp"
                android:layout_below="@id/feedImage"
                android:id="@+id/feedTitleText"
                android:textColor="#3245ff"
                android:clickable="true"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_margin="5dp"
                android:layout_below="@id/feedImage"
                android:layout_toEndOf="@id/feedTitleText"
                android:id="@+id/feedDateText"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_margin="5dp"
                android:layout_below="@id/feedTitleText"
                android:id="@+id/feedDetailsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>