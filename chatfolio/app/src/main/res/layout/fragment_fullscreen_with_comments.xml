<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:minWidth="600dp"
    android:layout_marginTop="10dp"
    android:minHeight="430dp"
    android:layout_width="310dp"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:background="#2a7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/fullScreenImage"
                android:layout_width="match_parent"
                android:layout_height="250dp" />
            <TextView
                android:layout_margin="5dp"
                android:id="@+id/fullScreenTitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_margin="5dp"
                android:id="@+id/fullScreenCommentNumberText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/fullScreenCommentList"
        android:layout_width="match_parent"
        android:layout_height="110dp" />
    <RelativeLayout

        android:background="#eee"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <EditText
            android:id="@+id/fullScreenCommentEdit"
            android:padding="2dp"
            android:layout_margin="3dp"
            android:layout_marginEnd="40dp"

            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <Button
            android:background="#00000000"
            android:textColor="#2a7"
            android:text="Send"
            android:layout_alignParentEnd="true"
            android:id="@+id/fullScreenCommentSendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>